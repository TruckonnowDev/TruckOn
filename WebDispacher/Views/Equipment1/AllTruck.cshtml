                        <th>
                            🖱
                        </th>
                        <th>
                            🖱
                        </th>
                        <th>
                            🖱
                        </th>
                        <th>
                            🖱
                        </th>
                        <th>
                            🖱
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for(int i = 0; i< ViewBag.Trucks.Count; i++)
                    {
                    <tr>
                        <td>
                            @ViewBag.Trucks[i].NameTruk
                        </td>
                        <td>
                            @ViewBag.Trucks[i].Yera
                        </td>
                        <td>
                            @ViewBag.Trucks[i].Make
                        </td>
                        <td>
                            @ViewBag.Trucks[i].Model
                        </td>
                        <td>
                            @ViewBag.Trucks[i].Type
                        </td>
                        <td>
                            @ViewBag.Trucks[i].ColorTruk
                        </td>
                        <td>
                            @ViewBag.Trucks[i].PlateTruk
                        </td>
                        <td>
                            @ViewBag.Trucks[i].Satet
                        </td>
                        <td>
                            @ViewBag.Trucks[i].Exp
                        </td>
                        <td>
                            @ViewBag.Trucks[i].Vin
                        </td>
                        <td>
                            @ViewBag.Trucks[i].Owner
                        </td>
                        <td style="cursor:pointer" onclick="ViewInspection(@ViewBag.Trucks[i].Id)">
                            ⇥
                        </td>
                        <td style="cursor:pointer;">
                            ✎
                        </td>
                        <td onclick="window.location.href='@ViewBag.BaseUrl/Settings?idTr=@ViewBag.Trucks[i].Id&page=s&idProfile=0&typeTransport=Truck'">
                            ⚙️
                        </td>
                        <td onclick="GoToTruckDoc(@ViewBag.Trucks[i].Id)">
                            🖺
                        </td>
                        <td style="cursor:pointer;" onclick="Remove(@ViewBag.Trucks[i].Id)">
                            ✖
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

<script>

    function ViewInspection(id) {
        document.location.href =  "@ViewBag.BaseUrl/Driver/InspactionTrucks?idDriver=0&idTruck="+id+"&idTrailer=0&date=0";
    }

    function Remove(id) {
        document.location.href = "@ViewBag.BaseUrl/Equipment/Truck/Remove?id="+id;
    }

    function GoToTruckDoc(id) {
        document.location.href = "@ViewBag.BaseUrl/Equipment/Truck/Doc?id="+id;
    }
</script>

