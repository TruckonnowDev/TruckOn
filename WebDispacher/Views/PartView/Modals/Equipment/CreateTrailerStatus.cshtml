@using DaoModels.DAO.Models;
@using Microsoft.AspNetCore.Mvc.Localization
@using WebDispacher.ViewModels.Trailer;

@inject IViewLocalizer Localizer

@model (CreateTrailerStatusVm, string)

<div class="modal fade" id="addTrailerStatus" tabindex="-1" role="dialog" aria-labelledby="addTrailerStatusLabel">
    <content class="ng-modal-wrapper">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header modal-title">
                    <h1 class="text-center" style="width:100%;" id="TrailerStatusLabel">@Localizer["AddTrailerStatusHeader"]</h1>
                </div>
                <div class="modal-body">
                    <form method="post" action="/Equipment/Trailer/SaveCustomStatus">
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <label for="">
                                <label class="mb-0 pl-0" asp-for="Item1.Name"></label>
                                <input type="text" class="modal-inp-text subject-input" id="statusName" name="Name" value="@Model.Item1.Name" required>
                                @Html.ValidationMessageFor(model => model.Item1.Name, "", new { @class = "text-danger" })
                            </label>
                        </div>
                        <div class="form-group">
                            <label for="statusColor">@Localizer["StatusColor"]:
                            <div id="colorPicker" class="color-picker">
                                @foreach (var colorGroup in Model.Item1.TrailerStatusThemes)
                                {
                                    <div class="color-option-group" data-group-id="@colorGroup.Id">
                                            <div class="color-option color-option-first" style="background-color: #@colorGroup.TextColor.HexCode"></div>
                                        <div class="color-option" style="background-color: #@colorGroup.BackgroundColor.HexCode"></div>
                                    </div>
                                }
                            </div>

                                <input type="hidden" id="SelectedThemeId" name="SelectedThemeId" value="@Model.Item1.SelectedThemeId" />
                            </label>
                            @Html.ValidationMessageFor(model => model.Item1.SelectedThemeId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="statusColor">
                                @Localizer["Preview"]:
                                <div id="exampleBlock" class="example-block">
                                    <div id="exampleText" class="example-text"></div>
                                    <div id="exampleBg" class="example-bg"></div>
                                </div>
                            </label>
                        </div>


                        <div class="form-group full-label">
                            
                            <input type="hidden" name="returnUrl" value="@Model.Item2">
                            <input type="hidden" value="" name="dateTimeLocalCreateTrailer" />
                            <input class="btn1 button-custom" type="submit" value="@Localizer["ButtonAddTrailerStatus"]" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </content>
</div>

<script>
    function initializeTrailerStatusScripts() {
        const dateInputCreateTrailerStatus = document.querySelector("[name='dateTimeLocalCreateTrailer']");

        $("input[type=submit]").on('click', function (e) {
            dateInputCreateTrailerStatus.value = GetDateTimeInFormat(new Date());
        });

        var colorPicker = $('#colorPicker');
        var selectedColorGroupIdInput = $('#SelectedThemeId');
        var exampleBlock = $('#exampleBlock');
        var exampleText = $('#statusName');

        colorPicker.on('click', '.color-option-group', function () {
            var colorOptionGroup = $(this);

            $('.color-option-group.selected').removeClass('selected');

            colorOptionGroup.addClass('selected');

            var selectedGroupId = colorOptionGroup.data('group-id');

            selectedColorGroupIdInput.val(selectedGroupId);

            updateExampleBlock();
        });

        exampleText.on('input', function () {
            updateExampleBlock();
        });

        function updateExampleBlock() {
            var selectedText = exampleText.val();
            var selectedColorGroup = $('.color-option-group.selected');

            var bgColor = selectedColorGroup.find('.color-option').eq(1).css('background-color');
            var textColor = selectedColorGroup.find('.color-option').eq(0).css('background-color');

            var exampleHtml = '<div class="value-td">';
            exampleHtml += '<span class="badge" style="background-color:' + bgColor + ';color:' + textColor + ';">' + selectedText + '</span>';
            exampleHtml += '</div>';

            exampleBlock.html(exampleHtml);

            exampleBlock.show();
        }
    }
    $(document).ready(function () {
        initializeTrailerStatusScripts();
    });
</script>

