
<header>
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-md-auto">
                <div class="logo">
                    <img src="~/img/logo.svg" alt="" onclick="document.location.href='http://truckonnow.com/'" />
                </div>
            </div>
            <div class="col-md-auto">
                <div class="info">
                    @if (ViewData["reg"] != null)
                    {
                        <div class="col-md-auto">
                            <a href="@ViewData["reg"]"><div class="btn3">Request Access</div></a>
                        </div>
                    }
                    <div class="login">
                        <a href="#" id="login">Login</a>
                        <ul class="sub-login">
                            <li><a href="/carrier-login">Carrier TMS</a></li>
                            <li><a href="/shipper-login">Shipper TMS</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>