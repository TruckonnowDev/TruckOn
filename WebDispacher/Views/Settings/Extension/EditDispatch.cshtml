<div class="body">
    <input class="backBtn" type="button" value="← Back" onclick="history.back();" />
    <form style="width:45%;" action="" method="post" enctype="multipart/form-data" asp-for="FileUpload.FormFiles">
        <div class="content">
            <h2 style="color: rgb(51, 51, 51);margin-bottom:2px;">Add New Dispatcher</h2>
            <input hidden name="idDispatch" value="@ViewBag.Dispatcher.Id" class="inpText validation" type="text" required />
            <p class="inpLabe">Type Dispatcher</p>
            <select name="typeDispatcher" class="inpText validation" type="text" onchange="SelectTrailer(this.options[this.selectedIndex].value)" required>
                <option value="">Choose a dispatcher type</option>
                <option selected value="Central Dispatch">Central Dispatch</option>
            </select>
            <p class="inpLabe">Login Dispatch</p>
            <input name="login" value="@ViewBag.Dispatcher.Login" class="inpText validation" type="text" required />
            <p class="inpLabe">Password Dispatch</p>
            <input name="password" value="@ViewBag.Dispatcher.Password" class="inpText validation" type="text" required />
        </div>
        <input class="btnSave" value="Save" type="submit" />
    </form>
</div>

