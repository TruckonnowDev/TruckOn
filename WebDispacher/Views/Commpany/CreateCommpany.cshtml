                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a>@Localizer["InfoMessageUploadFiles"]</a>
                                </div>
                            </div>
                            <input id="button-save" class="btn1 big-label height-input big-font-size" value="@Localizer["Save"]" type="submit" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    $("#fi6").change(function () {
        CheckValid('fl6', 'fi6');
    });

    $("#fi5").change(function () {
        CheckValid('fl5', 'fi5');
    });

    $("#fi4").change(function () {
        CheckValid('fl4', 'fi4');
    });

    $("#fi3").change(function () {
        CheckValid('fl3', 'fi3');
    });

    $("#fi2").change(function () {
        CheckValid('fl2', 'fi2');
    });

    $("#fi1").change(function () {
        CheckValid('fl1', 'fi1');
    });

    $("#button-save").on('click', function () {
        CheckValid('fl1', 'fi1');
        CheckValid('fl2', 'fi2');
        CheckValid('fl3', 'fi3');
        CheckValid('fl4', 'fi4');
        CheckValid('fl5', 'fi5');
        CheckValid('fl6', 'fi6');
    })
</script>