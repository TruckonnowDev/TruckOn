@using WebDispacher.Constants

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Truckonnow</title>
    <meta property="og:title" content="Truck dispatching software - Truckonnow">
    <meta property="og:description" content="Applications for track companies that control the work of drivers and owners.  You can try free trial 7 days.">
    <meta name="description" content="Applications for track companies that control the work of drivers and owners.  You can try free trial 7 days.">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/css/main.min.css">
    <link rel="icon" type="image/x-icon" href="~/icon/favicon.ico">
    <script src="~/js/scripts.min.js"></script>
    <script src="~/libs/bootstrap/css/bootstrap.min.css"></script>
    <script src="~/libs/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/orders.js"></script>
    <script src="~/js/driver.js"></script>
    <script src="~/js/equipment.js"></script>
    <script src="~/js/dispatch.js"></script>
    <script>
        if (window.screen.width < 767) {
            document.write('<script src="js/dop-768.js"><\/script>');
        }
    </script>
</head>
<body>
    @if (ViewData[NavConstants.TypeNavBar] == NavConstants.AllUsers)
        {
            @await Html.PartialAsync("~/Views/PartView/NavAllUsers.cshtml");
        }
        @if (ViewData[NavConstants.TypeNavBar] == NavConstants.BaseAllUsers)
        {
            @await Html.PartialAsync("~/Views/PartView/NavBaseAllUsers.cshtml");
        }
        else if (ViewData[NavConstants.TypeNavBar] == NavConstants.BaseCompany)
        {
            @await Html.PartialAsync("~/Views/PartView/NavBaseCommpany.cshtml");
        }
        else if (ViewData[NavConstants.TypeNavBar] == NavConstants.NormalCompany)
        {
            @await Html.PartialAsync("~/Views/PartView/NavNormalCompany.cshtml");
        }
        else if (ViewData[NavConstants.TypeNavBar] == NavConstants.TypeNavBaseCompanySettings)
        {
            @await Html.PartialAsync("~/Views/PartView/NavSettingsBaseCompany.cshtml");
        }
        else if (ViewData[NavConstants.TypeNavBar] == NavConstants.TypeNavNormalCompanySettings)
        {
            @await Html.PartialAsync("~/Views/PartView/NavSettingsNormalCompany.cshtml");
        }
        else if (ViewData[NavConstants.TypeNavBar] == NavConstants.NavTryForFree)
        {
            @await Html.PartialAsync("~/Views/PartView/NavTry_for_free.cshtml");
        }
        else if (ViewData[NavConstants.TypeNavBar] == NavConstants.CancelSubscribe)
        {
            @await Html.PartialAsync("~/Views/PartView/NavSettingsCacelSubscribe.cshtml");
        }
        else if (ViewData[NavConstants.TypeNavBar] == NavConstants.Error)
        {
        }
    @RenderBody()
    <script>
        $(document).ready(function () {
            //$("body").fadeIn(1000);
            window.onload = function () { $("body").fadeIn(400); }
        });
    </script>
</body>
</html>
<style>
    body {
        padding: 0px;
        margin: 0px;
        animation-name: open;
        animation-duration: 1s;
    }

    @@keyframes open {
        from {opacity: 0;}
        to {opacity: 1;}
        }


    .navst {
        width: 99%;
        height: 30px;
        margin: 0px;
        padding: 8px;
        top: 0px;
        left: 0px;
        display:flex;
        justify-content:center;
    }

    .imgMirir {
        margin: 4px;
        transition: transform .7s;
    }

    .imgMirir:hover {
        transform: rotate3d(5, 10.0, 2.00, 40deg);
        transition: transform .7s ease-in-out;
    }

    a {
        text-decoration: none;
        margin: 0px;
    }

    .linkASt {
        font-size: 25px;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .btn {
        background-color:rgba(0, 0, 0, 0.00);
        border:none;
        height:40px;
        color:white;
        font-size:15px;
        margin-left:80px;
    }

        .btn:hover {
            color: silver;
            transition: 0.3s
        }

    ::-webkit-scrollbar {
        width: 7px;
    }

    ::-webkit-scrollbar-track {
        background: rgba(175, 217, 238, 0.73);
        border-radius: 30px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: silver;
        border-radius: 30px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: rgba(16, 156, 228, 0.34);
            
            
        }
        .active{
            color: #C4C9D4!important;
        }
</style>