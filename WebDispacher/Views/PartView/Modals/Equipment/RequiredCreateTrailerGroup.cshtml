@using DaoModels.DAO.Models;
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model (TrailerGroup, string)

<div class="modal fade" id="addFirstGroup" tabindex="-1" role="dialog" aria-labelledby="addFirstGroupLabel">
    <content class="ng-modal-wrapper">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header modal-title">
                    <h1 class="text-center" style="width:100%;" id="RequredDocLabel">@Localizer["AddTrailerGroupHeader"]</h1>
                </div>
                <div class="modal-body">
                    <form method="post" action="/Equipment/Trailer/SaveGroup">
                        <div class="form-group">
                            <label for="">
                                @Localizer["Name"]
                                <span><abbr data-title="@Localizer["GroupNameLabelInfo"]"><i class="bi bi-info-circle"></i></abbr></span>
                                <input class="modal-inp-text subject-input group-name" type="text" asp-for="Item1.Name" name="Name" id="groupName" value="@Model.Item1.Name" required />
                                @Html.ValidationMessageFor(model => model.Item1.Name, "", new { @class = "text-danger" })
                            </label>
                        </div>
                        <div class="form-group full-label">
                            
                            <input type="hidden" name="returnUrl" value="@Model.Item2">
                            <input type="hidden" value="" name="dateTimeLocalTrailer" />
                            <input class="btn1 button-custom" type="submit" value="@Localizer["ButtonAddGroup"]" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </content>
</div>

<script>
    const dateInput = document.querySelector("[name='dateTimeLocalTrailer']");

    $("input[type=submit]").on('click', function (e) 
    {
        localStorage.setItem('notification', 'successCreateTrailerGroup');
        dateInput.value = GetDateTimeInFormat(new Date());
    });
</script>
