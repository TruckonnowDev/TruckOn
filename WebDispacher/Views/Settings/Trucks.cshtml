@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Trucks";
}

<body>
    <div class="admin">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title">
                        <h1>@Localizer["Trucks"]</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="tabs">
                        <div class="tab whiteborder" onclick="window.location.href='@Url.Action("Trucks", "Settings")';">@Localizer["Trucks"]</div>
                        <div class="tab" onclick="window.location.href='@Url.Action("Trailers", "Settings")';">@Localizer["Trailers"]</div>
                        <div class="tabContent">
                            <table>
                                <thead>
                                    <tr>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Year"]</th>
                                        <th>@Localizer["Make"]</th>
                                        <th>@Localizer["Model"]</th>
                                        <th>@Localizer["Type"]</th>
                                        <th>@Localizer["Color"]</th>
                                        <th>@Localizer["Plate"]#</th>
                                        <th>@Localizer["State"]</th>
                                        <th>@Localizer["PlateExp"]</th>
                                        <th>Vin #</th>
                                        <th>@Localizer["Owner"]</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < ViewBag.Trucks.Count; i++)
                                    {
                                        <tr>
                                            <td>@ViewBag.Trucks[i].NameTruk</td>
                                            <td>@ViewBag.Trucks[i].Yera</td>
                                            <td>@ViewBag.Trucks[i].Make</td>
                                            <td>@ViewBag.Trucks[i].Model</td>
                                            <td>@ViewBag.Trucks[i].Type</td>
                                            <td>@ViewBag.Trucks[i].ColorTruk</td>
                                            <td>@ViewBag.Trucks[i].PlateTruk</td>
                                            <td>@ViewBag.Trucks[i].Satet</td>
                                            <td>@ViewBag.Trucks[i].Exp</td>
                                            <td>@ViewBag.Trucks[i].Vin</td>
                                            <td>@ViewBag.Trucks[i].Owner</td>
                                            <td>
                                                <img src="~/img/setting.svg" alt="" onclick="window.location.href='@ViewBag.BaseUrl/Settings?idTr=@ViewBag.Trucks[i].Id&page=s&idProfile=0&typeTransport=Truck'">
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>