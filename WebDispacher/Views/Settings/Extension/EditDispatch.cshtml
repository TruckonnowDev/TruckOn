@using Microsoft.AspNetCore.Mvc.Localization

@model WebDispacher.ViewModels.Dispatcher.DispatcherViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Edit Dispatch";
}

<body>
    <div class="admin">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="tabContent">
                        <div class="title">
                            <a href="#" onclick="history.back();">@Localizer["BackToDispatcher"]</a>
                        </div>
                        <div class="title">
                            <h1 class="text-info-header-1">@Localizer["EditDispatcher"]</h1>
                        </div>
                        <form action="" method="post" enctype="multipart/form-data">
                            @Html.ValidationSummary()
                            <input hidden name="Id" value="@Model.Id" class="inpText validation" type="text" required />
                            <label for="">
                                @Localizer["TypeDispatcher"]
                                <select class="height-input input-select" asp-for="Type" required>
                                    <option value="">@Localizer["ChooseDispatcherType"]</option>
                                    <option value="Central Dispatch">Central Dispatch</option>
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </select>
                            </label>
                            <label for="">
                                @Localizer["Login"]
                                <input type="text" asp-for="Login" value="@Model.Login">
                                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                            </label>
                            <label for="">
                                @Localizer["Password"]
                                <input type="text" asp-for="Password" value="@Model.Password">
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </label>

                            <input type="submit" value="@Localizer["SaveInfo"]" class="btn1" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>