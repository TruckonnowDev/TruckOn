@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer


<div class="modal fade" id="modal-index" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteEntryModalLabel" aria-hidden="true">
    <content class="ng-modal-wrapper">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header modal-title">
                    @switch (ViewData["ConfirmMessage"])
                    {
                        case "CompanyDeactivate":
                            <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["ConfirmMessageDeactivateCompany"]</h1>
                            break;

                        case "CompanyLogin":
                            <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["ConfirmMessageLoginCompany"]</h1>
                            break;

                        case "CompanyActivate":
                            <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["ConfirmMessageActivateCompany"]</h1>
                            break;
                        case "DeleteMarketPost":
                            <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["ConfirmMessageDeleteMarketPost"]</h1>
                            break;
                        case "CloseMarketPost":
                            <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["ConfirmMessageCloseMarketPost"]</h1>
                            break;
                        case "DeleteTruckGroup":
                            <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["ConfirmMessagDeleteTruckGroup"]</h1>
                            break;
                            case "DeleteTrailerGroup":
                            <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["ConfirmMessagDeleteTrailerGroup"]</h1>
                            break;

                        default:
                            <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["ConfirmMessage"]</h1>
                            break;
                    }
                        
                    <button type="button" style="font-size:18px;" class="close text-right" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&#9587;</span>
                    </button>
                </div>
                <div class="modal-body pt-3" style="display: flex;">
                    <div class="form-group full-label mb-0" style="width:50%;">
                        <button class="button-custom submit-add" id="remove-entry-button">@Localizer["ButtonAgreee"]</button>
                    </div>
                    <div class="form-group full-label mb-0" style="width:50%;">
                        <button data-dismiss="modal" class="button-custom-2">@Localizer["ButtonNo"]</button>
                    </div>
                </div>
            </div>
        </div>
    </content>
</div>

<script>

    $(document).ready(function() {
        let modalIndex = "@ViewData["ModalId"]";

        if(modalIndex !== ""){
            $("#modal-index").attr('id', modalIndex);
        }
    });

</script>

