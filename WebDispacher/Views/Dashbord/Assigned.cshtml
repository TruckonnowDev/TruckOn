@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Dashboard | Assigned";
}

<div class="admin">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h1>@Localizer["Orders"]</h1>
                    <button class="btn1 mr-3" id="create-order-btn">@Localizer["CreateOrder"]</button>
                    <a style="background-color: white;color:#686F7C;" data-toggle="collapse" href="#search-form" role="button" aria-expanded="false" aria-controls="search-form">
                        @Localizer["SearchOrders"]
                        <span class="open-chevron">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </span>
                    </a>
                </div>
                <div class="collapse multi-collapse" id="search-form">
                    <div style="margin-top: 15px;" class="card border card-body">
                        <form method="get" action="/Dashbord/Order/Assigned">
                            <input class="type-button" type="text" value="@ViewBag.LoadId" id="loadId-input" name="loadId" placeholder="@Localizer["LoadId"]">
                            <input class="type-button" type="text" value="@ViewBag.Name" id="name-input" name="name" placeholder="@Localizer["Name"]">
                            <input class="type-button" type="text" value="@ViewBag.Address" id="address-input" name="address" placeholder="@Localizer["Address"]">
                            <input class="type-button" type="text" value="@ViewBag.Phone" id="phone-input" name="phone" placeholder="@Localizer["PhoneNumber"]">
                            <input class="type-button" type="text" value="@ViewBag.Email" id="email-input" name="email" placeholder="@Localizer["Email"]">
                            <input class="type-button" type="text" value="@ViewBag.price" id="price-input" name="price" placeholder="@Localizer["Price"]">
                            <button type="submit" class="btn1 btn-modal mt-2">@Localizer["Search"]</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="tabs">
                    <div class="d-flex orders">
                        <div class="tab" onclick="window.location.href='@Url.Action("NewLoad", "Dashbord", new { loadId = ViewBag.LoadId, name = ViewBag.Name, address=ViewBag.Address, phone = ViewBag.Phone, email = ViewBag.Email, price = ViewBag.price })';">@Localizer["NewLoad"]</div>
                        <div class="tab whiteborder" onclick="window.location.href='@Url.Action("Assigned", "Dashbord", new { loadId = ViewBag.LoadId, name = ViewBag.Name, address=ViewBag.Address, phone = ViewBag.Phone, email = ViewBag.Email, price = ViewBag.price })';">@Localizer["Assigned"]</div>
                        <div class="tab" onclick="window.location.href = '@Url.Action("Pickedup", "Dashbord", new { loadId = ViewBag.LoadId, name = ViewBag.Name, address=ViewBag.Address, phone = ViewBag.Phone, email = ViewBag.Email, price = ViewBag.price })';">@Localizer["PickedUp"]</div>
                        <div class="tab" onclick="window.location.href='@Url.Action("Delivered", "Dashbord", new { loadId = ViewBag.LoadId, name = ViewBag.Name, address=ViewBag.Address, phone = ViewBag.Phone, email = ViewBag.Email, price = ViewBag.price })';">@Localizer["Delivered"]</div>
                        <div class="tab" onclick="window.location.href='@Url.Action("Billed", "Dashbord", new { loadId = ViewBag.LoadId, name = ViewBag.Name, address=ViewBag.Address, phone = ViewBag.Phone, email = ViewBag.Email, price = ViewBag.price })';">@Localizer["Billed"]</div>
                        <div class="tab" onclick="window.location.href='@Url.Action("Paid", "Dashbord", new { loadId = ViewBag.LoadId, name = ViewBag.Name, address=ViewBag.Address, phone = ViewBag.Phone, email = ViewBag.Email, price = ViewBag.price })';">@Localizer["Paid"]</div>
                        <div class="tab" onclick="window.location.href='@Url.Action("Archived", "Dashbord", new { loadId = ViewBag.LoadId, name = ViewBag.Name, address=ViewBag.Address, phone = ViewBag.Phone, email = ViewBag.Email, price = ViewBag.price })';">@Localizer["Archived"]</div>
                        <div class="tab" onclick="window.location.href='@Url.Action("Deleted", "Dashbord", new { loadId = ViewBag.LoadId, name = ViewBag.Name, address=ViewBag.Address, phone = ViewBag.Phone, email = ViewBag.Email, price = ViewBag.price })';">@Localizer["Deleted"]</div>
                    </div>
                    <div class="tabContent">
                        @for (int i = 0; i < ViewBag.Orders.Count; i++)
                        {
                            <div class="one-line">
                                <div class="top-line">
                                    <div class="left">
                                        <button class="btn3" onClick='window.location.href="@Url.Action( "FullInfoOrder", new { id = ViewBag.Orders[i].Id, status = "Assigned" } )"'>@Localizer["LoadId"]: @ViewBag.Orders[i].idOrder</button>
                                        <div class="text"><img src="~/img/dolar.svg" alt=""> @ViewBag.Orders[i].PriceListed</div>
                                        <div class="text"><img src="~/img/clock.svg" alt=""> @ViewBag.Orders[i].TotalPaymentToCarrier</div>
                                    </div>
                                    <div class="right">
                                        <a class="btn3" href="@Url.Action("EditOrder", new { id = ViewBag.Orders[i].Id, status = "Assigned",} )">@Localizer["Edit"]</a>
                                        <select onchange="SelectAssining1(this.options[this.selectedIndex].value, '@ViewBag.BaseUrl')" class="btn3 assing-select">
                                            <option value="">@Localizer["Reassign"]</option>
                                            <option value="@ViewBag.Orders[i].Id,Unassign">@Localizer["Unassign"]</option>
                                            @for (int j = 0; j < ViewBag.Drivers.Count; j++)
                                            {
                                                <option value="@ViewBag.Orders[i].Id,@ViewBag.Drivers[j].Id">@ViewBag.Drivers[j].FullName</option>
                                            }
                                        </select>
                                        <a class="btn3 open-ConfirmDelete" data-toggle="modal" data-id="@ViewBag.Orders[i].Id" href="#confirmDeleteEntryModal">@Localizer["Delete"]</a>

                                    </div>
                                </div>
                                <div class="info-line">
                                    <div class="info-block">
                                        <h3>@Localizer["Origin"]</h3>
                                        <p> @ViewBag.Orders[i].AddresP, @ViewBag.Orders[i].CityP,  @ViewBag.Orders[i].StateP, @ViewBag.Orders[i].ZipP</p>
                                        <p> <b>@Localizer["Phone"]:</b> @ViewBag.Orders[i].PhoneP</p>
                                    </div>
                                    <div class="info-block">
                                        <h3>@Localizer["Destination"]</h3>
                                        <p> @ViewBag.Orders[i].AddresD, @ViewBag.Orders[i].CityD,  @ViewBag.Orders[i].StateD, @ViewBag.Orders[i].ZipD</p>
                                        <p> <b>@Localizer["Phone"]:</b> @ViewBag.Orders[i].PhoneD</p>
                                        <p> <b>@Localizer["DeliveryEstimated"]:</b> @ViewBag.Orders[i].DeliveryEstimated</p>
                                        <p> <b>@Localizer["Phone"]:</b> @ViewBag.Orders[i].PhoneD</p>
                                    </div>
                                    <div class="info-block">
                                        <p> <b>@Localizer["AssignedTo"]:</b> @ViewBag.Orders[i].NameDriver</p>
                                        <p> <b>@Localizer["Phone"]:</b> @ViewBag.Orders[i].PhoneDriver</p>
                                    </div>
                                </div>
                            </div>
                        }
                        <pagination-list actual-pages="functions.GetPages(ViewBag.SelectedPage, ViewBag.count)" selected-page="ViewBag.SelectedPage" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/PartView/Modals/ConfirmDelete.cshtml");
    <script src="~/js/orders.js"></script>
</div>

<script>
    const filters = 'loadId=@ViewBag.LoadId&name=@ViewBag.Name&address=@ViewBag.Address&phone=@ViewBag.Phone&email=@ViewBag.Email&price=@ViewBag.price';


    ConfirmRemoveEntry(GetDateTimeInFormat(new Date()), `/Dashbord/Order/ArchivedOrder`, `/Dashbord/Order/Assigned?${filters}`, '#confirmDeleteEntryModal');

    $('#create-order-btn').on('click', function (e) {
        var body = '?&localDate=' + GetDateTimeInFormat(new Date());

        $.ajax({
            type: "post",
            async: true,
            url: `/Dashbord/Order/Creat${body}`,
            success: function (id) {
                window.location.href = `/Dashbord/Order/Edit?id=${id}&status=NewLoad`
            },
        });

    });

     $(document).ready(function() {
        ShowAlert();
        const loadId= $('#loadId-input').val();
        const name= $('#name-input').val();
        const address= $('#address-input').val();
        const phone= $('#phone-input').val();
        const email= $('#email-input').val();
        const price= $('#price-input').val();
     
        if (loadId !== "" || name !== "" || address !== "" 
        || phone !== "" || email !== "" 
        || price !== "")
        {
            $("#search-form").addClass('show')
        }
     });
</script>

<style>
    input::placeholder {
        color: #c4c9d5;
        font-size: 16px;
    }
</style>