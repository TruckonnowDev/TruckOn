<body>
    <div class="admin">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="tabContent">
                        
                        <div class="title">
                            <a href="#" onclick="history.back();">Back to Drivers</a>
                        </div>
                        <div class="title">
                            <h1 class="text-info-header-1">Info About the Driver</h1>
                        </div>
                        <form action="" method="post">
                            <label class="big-label" for="">
                                Full name
                                <input class="height-input" type="text" name="FullName" value="@ViewBag.Driver.FullName" required>
                            </label>
                            <label class="big-label" for="">
                                Email address
                                <input class="height-input" type="email" name="EmailAddress" value="@ViewBag.Driver.EmailAddress" required>
                            </label>
                            <label class="big-label" for="">
                                Password
                                <input class="height-input" type="text" name="Password" value="@ViewBag.Driver.Password" required>
                            </label>
                            <label class="big-label" for="">
                                Phone number
                                <input class="height-input" type="text" name="PhoneNumber" placeholder="XXXXXXXXXX" pattern="[0-9]{4,12}" value="@ViewBag.Driver.PhoneNumber" required>
                            </label>
                            <label class="big-label" for="">
                                Trailer capacity
                                <input class="height-input" type="text" name="TrailerCapacity" value="@ViewBag.Driver.TrailerCapacity" required>
                            </label>
                            <label class="big-label pb-3" for="">
                                Driver's license number
                                <input class="height-input" type="text" name="DriversLicenseNumber" value="@ViewBag.Driver.DriversLicenseNumber" required>
                            </label>
                            <input name="id" value="@ViewBag.Driver.Id" style="display:none"/>
                            <input class="btn1 height-input big-font-size big-label" type="submit" value="Save Info"/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>