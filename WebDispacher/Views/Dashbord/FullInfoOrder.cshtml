<body xmlns="http://www.w3.org/1999/html">
<div class="admin Billing">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="title text-info-padding-5">
                    <a href="#" onclick="history.back();">Back to Orders</a>
                    </div>
                <div class="title text-info-padding-5">

                    <h1 class="text-info-header-1">Information About the Order</h1>
                </div>
                <p class="text-info-p-1 text-info-padding-5"><b>Load id:</b> <span>@ViewBag.Order.idOrder</span></p>
                <p class="text-info-p-1 text-info-padding-5"><b>Price:</b> <span>@ViewBag.Order.PriceListed</span></p>
                <p class="text-info-p-1 text-info-padding-5"><b>Status:</b> <span>@ViewBag.Order.CurrentStatus</span></p>
                <div class="text-r">
                    <p class="text-info-header-3 text-info-padding-5"><b>Vehicles</b></p>
                </div>
                <table>
                    <tr class="blue">
                        <td>№</td>
                        <td>VIN</td>
                        <td>Year</td>
                        <td>Make</td>
                        <td>Model</td>
                        <td>Type</td>
                        <td>Color</td>
                        <td>Lot number</td>
                    </tr>
                    @if (ViewBag.Order.VehiclwInformations != null)
                    {
                        @for (int i = 0; i < ViewBag.Order.VehiclwInformations.Count; i++)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@ViewBag.Order.VehiclwInformations[i].VIN</td>
                                <td>@ViewBag.Order.VehiclwInformations[i].Year</td>
                                <td>@ViewBag.Order.VehiclwInformations[i].Make</td>
                                <td>@ViewBag.Order.VehiclwInformations[i].Model</td>
                                <td>@ViewBag.Order.VehiclwInformations[i].Type</td>
                                <td>@ViewBag.Order.VehiclwInformations[i].Color</td>
                                <td>@ViewBag.Order.VehiclwInformations[i].Lot</td>
                            </tr>
                        }
                    }
                </table>
                <div class="row">
                    <div class="col-md-3">
                        <div class="text-r">
                            <h3 class="text-info-header-3 text-info-padding-5">Origin</h3>
                            <p class="text-info-p"> @ViewBag.Order.AddresP, @ViewBag.Order.CityP, @ViewBag.Order.StateP, @ViewBag.Order.ZipP <br><b>Contact: </b>@ViewBag.Order.ContactNameP <br><b>Phone:</b> @ViewBag.Order.PhoneP <br><b>Pickup date: </b>@ViewBag.Order.PickupExactly</p>
                        </div>

                    </div>
                    <div class="col-md-3">
                        <div class="text-r">
                            <h3 class="text-info-header-3">Destination</h3>
                            <p class="text-info-p">@ViewBag.Order.AddresD, @ViewBag.Order.CityD, @ViewBag.Order.StateD, @ViewBag.Order.ZipD <br><b>Contact:</b> @ViewBag.Order.ContactNameD<br><b>Phone:</b> @ViewBag.Order.PhoneD<br><b>Delivery date:</b> @ViewBag.Order.DeliveryEstimated</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-r">
                            <h3 class="text-info-header-3">Payment Information</h3>
                            <p class="text-info-p">
                                <b>Price:</b> @ViewBag.Order.PriceListed<br> <b>Payment Method:</b> @ViewBag.Order.TotalPaymentToCarrier<br> <b>On Delivery to Carrier: </b> @ViewBag.Order.OnDeliveryToCarrier
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-r">
                            <h3 class="text-info-header-3">Customer</h3>
                            <p class="text-info-p">
                                <b>Contact:</b> @ViewBag.Order.ContactC<br>
                                <b>Phone:</b> @ViewBag.Order.PhoneC<br>
                                <b>Fax:</b> @ViewBag.Order.FaxC<br>
                                <b>Iccmc:</b> @ViewBag.Order.IccmcC
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-r">
                            <h3 class="text-info-header-3">Instructions</h3>
                            <p class="text-info-p">@ViewBag.Order.Titl1DI</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="text-r">
                            <h3 class="text-info-header-3">BOL</h3>
                            @if (ViewBag.Order.VehiclwInformations != null)
                            {
                                @for (int i = 0; i < ViewBag.Order.VehiclwInformations.Count; i++)
                                {
                                    <a href="@ViewBag.BaseUrl/Photo/BOL/@ViewBag.Order.VehiclwInformations[i].Id">@ViewBag.Order.VehiclwInformations[i].Make @ViewBag.Order.VehiclwInformations[i].Model @ViewBag.Order.VehiclwInformations[i].Year</a><br>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="right-bar-about">
                    <h3 class="text-info-header-3">Action history</h3>
                    @for (int i = 0; i < ViewBag.Historys.Count; i++)
                    {
                        <div class="one text-info-p">
                            <p>@ViewBag.Historys[i].Action</p>
                            <p>Date Action: @ViewBag.Historys[i].DateAction</p>
                        </div>  
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</body>

