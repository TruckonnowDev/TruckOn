<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDispatch.View.TabPage.Tab.ActivePage"
             xmlns:effect="clr-namespace:MDispatch.NewElement.Effect"
             x:Name="ctp">
    <ContentPage.ToolbarItems>
        <ToolbarItem  IconImageSource="settings.png" Clicked="ToolbarItem_Clicked_2"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout x:Name="body" Padding="0, 20, 0, 20">
                <FlexLayout Direction="Row" x:Name="blockInspactionTrack" HeightRequest="120"  Margin="24, 0, 24, 20" IsVisible="{Binding UnTimeOfInspection.IsInspection}">
                    <FlexLayout.Effects>
                        <effect:CornerRadius Radius="6" />
                    </FlexLayout.Effects>
                    <FlexLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToInspectionDriveCommand}"/>
                    </FlexLayout.GestureRecognizers>
                    <BoxView BackgroundColor="{Binding UnTimeOfInspection.GetColorBlock}" WidthRequest="16" />
                    <StackLayout Padding="10" BackgroundColor="{Binding UnTimeOfInspection.GetColorBlockOpacity}" FlexLayout.Grow="1">
                        <Label Text="Inspection Driver" FontSize="16" FontFamily="{StaticResource OpenSans-Bold}" />
                        <StackLayout>
                            <FlexLayout FlexLayout.AlignSelf="Center" Margin="3" >
                                <Image Source="timeInspection.png" HeightRequest="13" WidthRequest="13" Margin="0,  4, 0, 0"/>
                                <Label FontSize="14"
                                       TextColor="Black"
                                       FontFamily="{StaticResource OpenSans-Regular}" >
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text=" "/>
                                            <Span Text="Time to inspection: "/>
                                            <Span Text=" "/>
                                            <Span Text="{Binding UnTimeOfInspection.TimeOfInspection}"/>
                                         </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </FlexLayout>
                            <FlexLayout Margin="5">
                                <Image Source="descInspection.png" HeightRequest="13" WidthRequest="13" Margin="0,  4, 0, 0"/>
                                <Label FontSize="14"
                                       TextColor="Black"
                                       FontFamily="{StaticResource OpenSans-Regular}" >
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text=" "/>
                                            <Span Text="Need for inspection:"/>
                                            <Span Text=" "/>
                                            <Span Text="{Binding UnTimeOfInspection.TimeOfStatus}"/>
                                         </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </FlexLayout>
                        </StackLayout>
                    </StackLayout>
                </FlexLayout>
            <ListView ItemsSource="{Binding Shippings}" IsRefreshing="{Binding IsRefr}" IsPullToRefreshEnabled="True"
                      HasUnevenRows="True" SeparatorVisibility="None" RefreshCommand="{Binding RefreshCommand}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                    <FlexLayout Direction="Row" x:Name="st" Margin="24, 5, 24, 5">
                                        <FlexLayout.Effects>
                                            <effect:CornerRadius Radius="6" />
                                        </FlexLayout.Effects>
                                        <FlexLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" NumberOfTapsRequired="1"/>
                                        </FlexLayout.GestureRecognizers>
                                        <BoxView BackgroundColor="{Binding ColorCurrentStatus}" WidthRequest="16" />
                                        <StackLayout Padding="10" BackgroundColor="{Binding ColorOpacityCurrentStatus}" FlexLayout.Grow="1">
                                            <StackLayout Spacing="0">
                                                <StackLayout>
                                                    <Label x:Name="idOrder" Text="{Binding Id}" IsVisible="False" FontSize="17"/>
                                                </StackLayout>
                                                <FlexLayout IsVisible="{Binding IsVehiclw1}" JustifyContent="SpaceBetween">
                                                    <Label FontSize="16" TextColor="Black"
                                                           FontFamily="{StaticResource OpenSans-Bold}" >
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding VehiclwInformation1.Year}"/>
                                                                <Span Text=" "/>
                                                                <Span Text="{Binding VehiclwInformation1.Make}"/>
                                                                <Span Text=" "/>
                                                                <Span Text="{Binding VehiclwInformation1.Model}"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                    <Label Text="{Binding idOrder}"
                                                           FontSize="14"
                                                           FontFamily="{StaticResource OpenSans-SemiBold}"
                                                           TextColor="LightGray"/>
                                                </FlexLayout>
                                                <FlexLayout IsVisible="{Binding IsVehiclw2}">
                                                    <Label FontSize="16" TextColor="Black"
                                                           FontFamily="{StaticResource OpenSans-SemiBold}" >
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding VehiclwInformation2.Year}"/>
                                                                <Span Text=" "/>
                                                                <Span Text="{Binding VehiclwInformation2.Make}"/>
                                                                <Span Text=" "/>
                                                                <Span Text="{Binding VehiclwInformation2.Model}"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                </FlexLayout>
                                            </StackLayout>
                                            <FlexLayout HeightRequest="42">
                                                <Image Source="{Binding IcoViewStatus}" WidthRequest="17" Margin="0, 2, 0, 0"/>
                                                <StackLayout Padding="6, 0, 0, 0">
                                                    <FlexLayout>
                                                        <Label FontSize="14" TextColor="Black"
                                                               FontFamily="{StaticResource OpenSans-Regular}" >
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding CityP}"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding StateP}"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding PickupExactly}"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                    </FlexLayout>
                                                    <FlexLayout JustifyContent="SpaceBetween">
                                                        <Label FontSize="14" TextColor="Black"
                                                               FontFamily="{StaticResource OpenSans-Regular}" >
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding CityD}"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding StateD}"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding DeliveryEstimated}"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label Text="{Binding TextStatus}"
                                                               FontSize="14"
                                                               FontFamily="{StaticResource OpenSans-SemiBold}"
                                                               TextColor="{Binding ColorCurrentStatus}" />
                                                    </FlexLayout>
                                                </StackLayout>
                                            </FlexLayout>
                                            <StackLayout Orientation="Horizontal"
                                                         IsVisible="{Binding IsStartInspection}"
                                                         Margin="0, 5, 0 , 0">
                                                <Label Text="Please complete inspection"
                                                       FontSize="14" TextColor="{Binding ColorCurrentStatus}"
                                                       FontFamily="{StaticResource OpenSans-SemiBold}"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </FlexLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>