
<div class="body">
    <div style="display:flex;">
        <input class="btnCreateoOrder" type="button" value="Add Driver" onclick="window.location.href='@Url.Action("CreateDriver", "Driver")';" />
    </div>
    <div class="contentBody">
        @for (int i = 0; i < ViewBag.Drivers.Count; i++)
        {
        <div class="contentDriver">
            <div>

            <p class="inpData">@ViewBag.Drivers[i].FullName</p>
            <p2 class="inpData">Trailer capacity: @ViewBag.Drivers[i].TrailerCapacity</p2>
            <span class="inpData">Email: @ViewBag.Drivers[i].EmailAddress</span>
            <span class="inpData">, </span>
            <span class="inpData">Phone: @ViewBag.Drivers[i].PhoneNumber</span><br /> <br />
            <a href="@ViewBag.BaseUrl/Driver/Drivers/Edit?id=@ViewBag.Drivers[i].Id" class="btnId">Edit</a>
            @if (!ViewBag.Drivers[i].IsFired)
            {
                <input class="btnId" value="Remove" type="button" onclick="Remove(@ViewBag.Drivers[i].Id)" />
            }
            else
            {

                <input class="btnId" value="Restore" type="button" onclick="Restore(@ViewBag.Drivers[i].Id)" />
            }
            <a class="btnId" href="~/Driver/InspactionTrucks?idDriver=@ViewBag.Drivers[i].Id&idTruck=0&idTrailer=0&date=0">Inspection</a>
            </div>
            <div>
                <textarea class="inpData" style="margin:10px;min-width:400px; height:10vh;border:none;background:white; max-width:900px;" onchange="Comment(event, @ViewBag.Drivers[i].Id)">@ViewBag.Drivers[i].Comment</textarea>
            </div>
        </div>
        }
    </div>
</div>

<script>
    function Remove(id) {
        document.location.href = "@ViewBag.BaseUrl/Driver/Drivers/Remove?id="+id;
    }

    function Restore(id) {
        document.location.href = "@ViewBag.BaseUrl/Driver/Drivers/Restore?id="+id;
    }

    function Comment(event, id) {
        document.location.href = "@ViewBag.BaseUrl/Driver/Drivers/Comment?id="+id+"&Comment="+event.currentTarget.value;
    }
</script>

        <style>
            * {
                margin: 0px;
            }

            .btnCreateoOrder {
                color: white;
                background-color: darkgray;
                display: inline-block;
                padding: 10px;
                font-size: 14px;
                font-weight: 400;
                text-align: center;
                border: 2px solid;
                border-radius: 7px;
                margin-bottom:10px;
                margin-left: 14px;
            }

                .btnCreateoOrder:hover {
                    transition: 0.3s;
                    background-color: rgb(51, 51, 51);
                }

            .btnId:hover {
                background-color: rgba(45,45,45,0.98);
                color: white;
                transition: 0.5s;
            }

            .btnId {
                color: rgba(45,45,45,0.88);
                background: none;
                display: inline-block;
                padding: 6px;
                font-size: 13px;
                font-weight: 400;
                text-align: center;
                border: 1px solid;
                border-radius: 4px;
                margin: 2px;
            }

            .inpData {
                font-size: 18px;
                color: rgb(51, 51, 51);
            }

            .contentDriver {
                padding: 20px;
                border-width: 1px;
                border-style: solid;
                border-color: rgba(45, 45, 45, 0.38);
                width:80%;
                margin:10px;
                display:flex;
            }

            .contentBody {
                margin: 10px;
            }

            .body {
                margin-top: 30px;
                margin-left: 5px;
