@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer


<div class="modal fade" id="addRequredDoc" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="addRequredDocLabel" aria-hidden="true">
    <content class="ng-modal-wrapper">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header modal-title">
                    <h1 class="text-center" style="width:100%;" id="RequredDocLabel">@Localizer["AddNewDocsHeader"]</h1>
                </div>
                <div class="modal-body">
                    <form method="post" action="/Dashboard/Company/SaveDocs" enctype="multipart/form-data">
                        <div class="full-label">
                            <a class="a-label">@Localizer["UploadCertificateOfInsurance"]:</a>
                            <br />
                            <a>@Localizer["InfoMessageUploadFiles"]</a>
                            <div class="file-group">
                                <div class="row">
                                    <div class="col-md-8 label-input d-flex align-items-center">
                                        <div onclick="ClearFile(`fi1`, 'fl1');" class="fi" id="fl1"></div>
                                    </div>
                                    <div class="col-4 select-doc">
                                        <div class="select-button-1 d-flex justify-content-end">
                                            <label>
                                                @Localizer["SelectDocument"]
                                                <input class="height-input" id="fi1" type="file" onchange="GetFileName(this.value, 'fl1');" name="certificateOfInsurance" accept="application/pdf, image/jpeg, image/jpg" required>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p class="file-limit-exceeded text-danger"></p>
                        </div>
                        <div class="full-label">
                            <a class="a-label">@Localizer["UploadMCLetter"]:</a>
                            <br />
                            <a>@Localizer["InfoMessageUploadFiles"]</a>
                            <div class="file-group">
                                <div class="row">
                                    <div class="col-md-8 label-input d-flex align-items-center">
                                        <div onclick="ClearFile(`fi2`, 'fl2');" class="fi" id="fl2"></div>
                                    </div>
                                    <div class="col-4 select-doc">
                                        <div class="select-button-1 d-flex justify-content-end">
                                            <label>
                                                @Localizer["SelectDocument"]
                                                <input class="height-input" id="fi2" type="file" onchange="GetFileName(this.value, 'fl2');" name="mcLetter" accept="application/pdf, image/jpeg, image/jpg" required>
                                            </label>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p class="file-limit-exceeded text-danger"></p>
                        </div>
                        <div class="form-group full-label">
                            <button class="button-custom submit-add">@Localizer["ButtonAddDocs"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </content>
</div>

<script>
    $("#fi1").change(function () {
        CheckValid('fl1', 'fi1');
    });
    
    $("#fi2").change(function () {
        CheckValid('fl2', 'fi2');
    });

    $("#addRequredDoc .submit-add").on('click', function () {
        CheckValid('fl1', 'fi1');
        CheckValid('fl2', 'fi2');
    })
</script>

