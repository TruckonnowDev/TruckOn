<?xml version="1.0" encoding="utf-8" ?>
<camera:CameraPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDispatch.Vidget.View.ScanCamera"
             xmlns:camera="clr-namespace:MDispatch.NewElement"
             TypeCamera="DetectText"
             OnScan="CameraPage_OnScan"
             xmlns:helperLang="clr-namespace:MDispatch.Helpers">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image x:Name="paternPhoto" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"/>
            <Image Source="BackIconpage.png"
                   AbsoluteLayout.LayoutBounds="25, 25, 18, 36">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
            <Label Text="{x:Static helperLang:LanguageHelper.ScanPlateNumber}"
                   TextColor="White"
                   FontSize="21"
                   AbsoluteLayout.LayoutFlags="PositionProportional"
                   AbsoluteLayout.LayoutBounds=".5, .08, Autosize, Autosize"
                   FontFamily="{StaticResource OpenSans-Bold}"
                   HorizontalTextAlignment="Center"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</camera:CameraPage>