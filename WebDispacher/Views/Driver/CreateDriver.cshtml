<div class="body">
    <input class="backBtn" type="button" value="← Back to Orders" onclick="history.back();" />
    <form action="" method="post" enctype="multipart/form-data">
        <div class="content">
            <h2 style="color: rgb(51, 51, 51);margin-bottom:2px;">Add New Driver</h2>
            <p class="inpLabe">Full Name</p>
            <input name="fullName" class="inpText validation" type="text" required />
            <p class="inpLabe">Email Address</p>
            <input name="emailAddress" class="inpText validation" type="email" required />
            <p class="inpLabe">Password</p>
            <input name="password" class="inpText validation" type="text" required />
            <p class="inpLabe">Phone Number</p>
            <input name="phoneNumbe" class="inpText validation" type="tel" placeholder="XXXXXXXXXX" pattern="[0-9]{4,12}" required />
            <p class="inpLabe">Trailer Capacity</p>
            <input name="trailerCapacity" class="inpText" type="text" />
            <p class="inpLabe">Driver's License Number</p>
            <input name="driversLicenseNumber" class="inpText validation" type="text" required />
            <p class="inpLabe">Document DL</p>
            <div class="inpText">
                <label for="docLoad1" class="btnModal" style="margin-left:5px;">Select document DL</label>
                <input id="docLoad1" style="display: none;" type="file" name="dLDoc" onchange="LoadFile(this, 1)" accept="application/pdf, image/jpeg, image/jpg" required>
                <span id="nameNoLoadDoc1" class="spanModal" style="align-self:center;margin-left:5px;color:#ff4614;">You can upload files only in pdf, jpg and jepg</span>
                <span id="nameLoadDoc1" class="spanModal" style="align-self:center;margin-left:5px;color:#95f816;" hidden></span>
            </div>
            <p class="inpLabe">Document Medical card</p>
            <div class="inpText">
                <label for="docLoad2" class="btnModal" style="margin-left:5px;">Select document Medical card</label>
                <input id="docLoad2" style="display: none;" type="file" name="medicalCardDoc" onchange="LoadFile(this, 2)" accept="application/pdf, image/jpeg, image/jpg" required>
                <span id="nameNoLoadDoc2" class="spanModal" style="align-self:center;margin-left:5px;color:#ff4614;">You can upload files only in pdf, jpg and jepg</span>
                <span id="nameLoadDoc2" class="spanModal" style="align-self:center;margin-left:5px;color:#95f816;" hidden></span>
            </div>
            <p class="inpLabe">Document SSN</p>
            <div class="inpText">
                <label for="docLoad3" class="btnModal" style="margin-left:5px;">Select document SSN</label>
                <input id="docLoad3" style="display: none;" type="file" name="sSNDoc" onchange="LoadFile(this, 3)" accept="application/pdf, image/jpeg, image/jpg" required>
                <span id="nameNoLoadDoc3" class="spanModal" style="align-self:center;margin-left:5px;color:#ff4614;">You can upload files only in pdf, jpg and jepg</span>
                <span id="nameLoadDoc3" class="spanModal" style="align-self:center;margin-left:5px;color:#95f816;" hidden></span>
            </div>
            <p class="inpLabe">Document Proof of work Authorization or GC</p>
            <div class="inpText">
                <label for="docLoad4" class="btnModal" style="margin-left:5px;">Select document Proof of work Authorization or GC</label>
                <input id="docLoad4" style="display: none;" type="file" name="proofOfWorkAuthorizationOrGCDoc" onchange="LoadFile(this, 4)" accept="application/pdf, image/jpeg, image/jpg" required>
                <span id="nameNoLoadDoc4" class="spanModal" style="align-self:center;margin-left:5px;color:#ff4614;">You can upload files only in pdf, jpg and jepg</span>
                <span id="nameLoadDoc4" class="spanModal" style="align-self:center;margin-left:5px;color:#95f816;" hidden></span>
            </div>
            <p class="inpLabe">Document DQL (driver qualification file)</p>
            <div class="inpText">
                <label for="docLoad5" class="btnModal" style="margin-left:5px;">Select document DQL</label>
                <input id="docLoad5" style="display: none;" type="file" name="dQLDoc" onchange="LoadFile(this, 5)" accept="application/pdf, image/jpeg, image/jpg" required>
                <span id="nameNoLoadDoc5" class="spanModal" style="align-self:center;margin-left:5px;color:#ff4614;">You can upload files only in pdf, jpg and jepg</span>
                <span id="nameLoadDoc5" class="spanModal" style="align-self:center;margin-left:5px;color:#95f816;" hidden></span>
            </div>
            <p class="inpLabe">Document Contract (company and driver)</p>
            <div class="inpText">
                <label for="docLoad6" class="btnModal" style="margin-left:5px;">Select document Contract</label>
                <input id="docLoad6" style="display: none;" type="file" name="contractDoc" onchange="LoadFile(this, 6)" accept="application/pdf, image/jpeg, image/jpg" required>
                <span id="nameNoLoadDoc6" class="spanModal" style="align-self:center;margin-left:5px;color:#ff4614;">You can upload files only in pdf, jpg and jepg</span>
                <span id="nameLoadDoc6" class="spanModal" style="align-self:center;margin-left:5px;color:#95f816;" hidden></span>
            </div>
            <p class="inpLabe">Document Drug test results (optional for 26000+)</p>
            <div class="inpText">
                <label for="docLoad7" class="btnModal" style="margin-left:5px;">Select document Drug test results</label>
                <input id="docLoad7" style="display: none;" type="file" name="drugTestResultsDoc" onchange="LoadFile(this, 7)" accept="application/pdf, image/jpeg, image/jpg">
                <span id="nameNoLoadDoc7" class="spanModal" style="align-self:center;margin-left:5px;color:#ff4614;">You can upload files only in pdf, jpg and jepg</span>
                <span id="nameLoadDoc7" class="spanModal" style="align-self:center;margin-left:5px;color:#95f816;" hidden></span>
            </div>
        </div>
        <input class="btnSave" value="Save" type="submit" />
    </form>
</div>

<script>
    function LoadFile(fille, numDock) {
        let pref = fille.files[0].name.substr(fille.files[0].name.lastIndexOf(".") + 1);
        let nameLoadDocEl = document.getElementById("nameLoadDoc" + numDock);
        let nameNoLoadDocEl = document.getElementById("nameNoLoadDoc" + numDock);
        if (pref == "pdf" || pref == "jpg" || pref == "jepg") {
            nameNoLoadDocEl.hidden = "hidden";
            nameLoadDocEl.hidden = "";
            nameLoadDocEl.textContent = fille.files[0].name;
        }
        else {
            nameNoLoadDocEl.hidden = "";
            nameLoadDocEl.hidden = "hidden";
            fille.value = "";
        }
    }
</script>

