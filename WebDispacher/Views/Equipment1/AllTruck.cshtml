
    <div class="body">
        <div style="display:flex;">
            <input class="btnCreateoOrder" type="button" value="Add Truck" onclick="window.location.href='@Url.Action("CreateTruck", "Equipment")';" />
        </div>
        <nav>
            <input class="btnSt activeBtn" type="button" value="Trucks" onclick="window.location.href='@Url.Action("Trucks", "Equipment")';" />
            <input class="btnSt" type="button" value="Trailers" onclick="window.location.href='@Url.Action("Trailers", "Equipment")';" />
        </nav>
        <div class="contentBody">
            <table>
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Year
                        </th>
                        <th>
                            Make
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            Type
                        </th>
                        <th>
                            Color
                        </th>
