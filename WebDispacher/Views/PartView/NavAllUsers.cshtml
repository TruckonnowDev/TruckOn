@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<header>
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-md-auto">
                <div class="logo">
                    <img src="/img/logo.svg" alt="" onclick="document.location.href='http://truckonnow.com/'">
                </div>
            </div>
            <div class="col-md-auto">
                <div class="info row nav-main-second-block" style="gap: 10px;">
                        <div class="login header-phone-number">
                            <a href="tel:+1 (773) 420-4444" class="tel">+1 (773) 420-4444</a>
                        </div>
                    <div class="login" style="margin-right: 30px;">
                            <a href="#" id="login">@Localizer["Login"]</a>
                            <ul class="sub-login">
                                <li><a href="/carrier-login">@Localizer["CarrierTMS"]</a></li>
                                <li><a href="/shipper-login">@Localizer["ShipperTMS"]</a></li>
                                <li><a href="/broker-login">@Localizer["BrokerTMS"]</a></li>
                            </ul>
                        </div>
                        <div>
                            <a href="/try_for_free">
                                <div class="btn1">
                                    @Localizer["TryForFree"]
                                </div>
                            </a>
                        </div>
                    <div class="login m-0 ml-2">
                            @await Html.PartialAsync("_SelectLanguagePartial")
                            </div>
                        </div>
                    
                </div>
            </div>
    </div>
</header>

<style>
    .nav-main-second-block {
        display: flex;
        margin-right: 0px;
        align-content: flex-end;
        align-items: flex-end
    }
</style>