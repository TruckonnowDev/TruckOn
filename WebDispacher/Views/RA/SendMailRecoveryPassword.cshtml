@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Mail Recovery Password";
}

<body>
    <div class="login-page">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <form method="post" action="" class="form-login">
                        <div class="white">
                            <h1>@Localizer["RecoveryPassword"]</h1>
                            <p style="color: red; text-align: center; font-size: 15px">
                                @ViewData["TextError"]
                            </p>
                            <label for="" class="password">
                                @Localizer["Email"]
                                <input name="email" type="email" placeholder="company@gmail.com">
                            </label>
                            <input type="hidden" value="" name="localDate" />
                            <input type="submit" value="@Localizer["Send"]" class="btn1-big">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    const dateInput = document.querySelector("[name='localDate']");

    $("input[type=submit]").on('click', function (e) 
    {
    dateInput.value = GetDateTimeInFormat(new Date());
    })
</script>