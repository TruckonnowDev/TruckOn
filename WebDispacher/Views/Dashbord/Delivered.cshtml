<div class="admin">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h1>Orders</h1>
                    <button class="btn1 mr-3" onClick='location.href="/Dashbord/Order/Creat"'>Create Order</button>
                    <a style="background-color: white;color:#686F7C;" data-toggle="collapse" href="#search-form" role="button" aria-expanded="false" aria-controls="search-form">Search Orders
                        <span>&#709;</span></a>
                </div>
                <div class="collapse multi-collapse" id="search-form">
                    <div style="margin-top: 15px;" class="card border card-body">
                        <form method="get" action="/Dashbord/Order/Delivered">
                            <input class="type-button" type="text" value="@ViewBag.LoadId" id="loadId-input" name="loadId" placeholder="Load id">
                            <input class="type-button" type="text" value="@ViewBag.Name" id="name-input" name="name" placeholder="Name">
                            <input class="type-button" type="text" value="@ViewBag.Address" id="address-input" name="address" placeholder="Address">
                            <input class="type-button" type="text" value="@ViewBag.Phone" id="phone-input" name="phone" placeholder="Phone number">
                            <input class="type-button" type="text" value="@ViewBag.Email" id="email-input" name="email" placeholder="Email">
                            <input class="type-button" type="text" value="@ViewBag.price" id="price-input" name="price" placeholder="Price">
                            <button type="submit" class="btn1 btn-modal mt-2">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="tabs">
                    <div class="tab" onclick="window.location.href='@Url.Action("NewLoad", "Dashbord")';">New load</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Assigned", "Dashbord")';">Assigned</div>
                    <div class="tab" onclick="window.location.href = '@Url.Action("Pickedup", "Dashbord")';">Picked up</div>
                    <div class="tab whiteborder" onclick="window.location.href='@Url.Action("Delivered", "Dashbord")';">Delivered</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Billed", "Dashbord")';">Billed</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Paid", "Dashbord")';">Paid</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Archived", "Dashbord")';">Archived</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Deleted", "Dashbord")';">Deleted</div>
                    <div class="tabContent">
                        @for (int i = 0; i < ViewBag.Orders.Count; i++)
                        {
                            <div class="one-line">
                                <div class="top-line">
                                    <div class="left">
                                        <button class="btn3" onClick='location.href="@Url.Action( "FullInfoOrder", new { id = ViewBag.Orders[i].Id, status = "NewLoad" } )"'>Load ID: @ViewBag.Orders[i].idOrder</button>
                                        <div class="text"><img src="~/img/dolar.svg" alt=""> @ViewBag.Orders[i].PriceListed</div>
                                        <div class="text"><img src="~/img/clock.svg" alt=""> @ViewBag.Orders[i].TotalPaymentToCarrier</div>
                                        @if (ViewBag.Orders[i].CurrentStatus == "Delivered,Paid")
                                        {
                                            <div class="text" style="color: #007bff">Shipping paid</div>
                                        }
                                    </div>
                                    <div class="right">
                                        <a class="btn3" href="@Url.Action("EditOrder", new { id = ViewBag.Orders[i].Id, status = "NewLoad" } )">Edit</a>
                                        <a class="btn3" href=@Url.Action("ArchivedOrder", new { id = ViewBag.Orders[i].Id, status ="NewLoad"})>Delete</a>
                                        @if (ViewBag.Orders[i].CurrentStatus == "Delivered,Billed")
                                        {
                                            <a class="btn3" @*href="DeletedOrder?id=@ViewBag.Orders[i].Id&status=Delivered"*@>Pay shipping</a>
                                        }
                                    </div>
                                </div>
                                <div class="info-line">
                                    <div class="info-block">
                                        <h3>ORIGIN</h3>
                                        <p> @ViewBag.Orders[i].AddresP, @ViewBag.Orders[i].CityP,  @ViewBag.Orders[i].StateP, @ViewBag.Orders[i].ZipP</p>
                                        <p>Phone: @ViewBag.Orders[i].PhoneP</p>
                                    </div>
                                    <div class="info-block">
                                        <h3>DESTINATION</h3>
                                        <p> @ViewBag.Orders[i].AddresD, @ViewBag.Orders[i].CityD,  @ViewBag.Orders[i].StateD, @ViewBag.Orders[i].ZipD</p>
                                        <p>Phone: @ViewBag.Orders[i].PhoneD</p>
                                        <p>Delivery Estimated: @ViewBag.Orders[i].DeliveryEstimated</p>
                                        <p>Phone: @ViewBag.Orders[i].PhoneD</p>
                                    </div>
                                    <div class="info-block">
                                        @if (ViewBag.Orders[i].CurrentStatus == "Delivered,Paid")
                                        {
                                                    <p class="stPData">Assigned to @ViewBag.Orders[i].NameDriver</p>
                                                    <p class="stPData">Phone: @ViewBag.Orders[i].PhoneDriver</p>
                                        }
                                        else if (ViewBag.Orders[i].CurrentStatus == "Delivered,Billed")
                                        {
                                                    <p>Assigned to @ViewBag.Orders[i].NameDriver</p>
                                                    <p>Phone: @ViewBag.Orders[i].PhoneDriver</p>
                                                    @if (ViewBag.Orders[i].DataPaid != null && DateTime.Parse(ViewBag.Orders[i].DataPaid) >= DateTime.Now)
                                                    {
                                                        <p >Customer must pay shipping to @ViewBag.Orders[i].DataPaid</p>
                                                    }
                                                    else
                                                    {
                                                        <p style="color:red;" class="stPData">Customer must pay shipping to @ViewBag.Orders[i].DataPaid</p>
                                                    }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        @if (ViewBag.count != 1)
                        {
                            <div class="center">
                                <div class="pagination">
                                    @for (int y = 1; y <= ViewBag.count; y++)
                                    {
                                        <a href="?page=@y">@y</a>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/orders.js"></script>
</div>

<script>
 $(document).ready(function() {
     const loadId= $('#loadId-input').val();
     const name= $('#name-input').val();
     const address= $('#address-input').val();
     const phone= $('#phone-input').val();
     const email= $('#email-input').val();
     const price= $('#price-input').val();
     
     if (loadId !== "" || name !== "" || address !== "" 
        || phone !== "" || email !== "" 
        || price !== "")
     {
            $("#search-form").addClass('show')
     }
 });
</script>

<style>
    input::placeholder {
        color: #c4c9d5;
        font-size: 16px;
    }
</style>