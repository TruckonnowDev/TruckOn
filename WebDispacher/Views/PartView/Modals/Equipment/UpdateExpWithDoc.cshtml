@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div class="modal fade" id="modal-index" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteEntryModalLabel" aria-hidden="true">
    <content class="ng-modal-wrapper">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header modal-title">
                     <h1 class="text-center" style="width:100%;padding-left: 14px;" id="DeleteLabel">@Localizer["UpdateDateExpiratedWithDocument"]</h1>
                    <button type="button" style="font-size:18px;" class="close text-right" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&#9587;</span>
                    </button>
                </div>
                <div class="modal-body pt-3">
                    <form method="post" action="/Equipment/SaveDoc" enctype="multipart/form-data">
                        <div class="full-label">
                            <a class="a-label">
                                <span id="documentTypeLabel">@Localizer["AnnualIns"]</span>
                            </a>
                            <input class="height-input" type="text" name="docExp" id="inputUpdate" maxlength="12" required />
                        </div>
                        <div class="full-label">
                            <a class="a-label">@Localizer["UploadDocument"]:</a>
                            <br />
                            <a>@Localizer["InfoMessageUploadFiles"]</a>
                            <div class="file-group">
                                <div class="row">
                                    <div class="col-md-8 label-input d-flex align-items-center">
                                        <div onclick="ClearFile(`fiUpdate`, 'flUpdate');" class="fi" id="flUpdate"></div>
                                    </div>
                                    <div class="col-4 select-doc pl-1 pr-0">
                                        <div class="select-button-1 d-flex justify-content-end">
                                            <label>
                                                @Localizer["SelectDocument"]
                                                <input class="height-input" id="fiUpdate" type="file" onchange="GetFileName(this.value, 'flUpdate');" name="updateDocument" accept="application/pdf, image/jpeg, image/jpg" required>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p class="file-limit-exceeded text-danger"></p>
                        </div>
                        <div class="form-group full-label">
                            <input type="hidden" id="saveEntryDocumentId" name="entryId" />
                            <input type="hidden" id="fiUpdateTypeDocument" name="typeChangeDocument" />
                            <button class="button-custom submit-add">@Localizer["ButtonUpload"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </content>
</div>

<script>
    $(document).ready(function() {
        let modalIndex = "@ViewData["ModalId"]";

        if(modalIndex !== ""){
            $("#modal-index").attr('id', modalIndex);
        }
    });

    function setDocumentType(documentType, documentLabel, entryId, mask, formatValid) {
        $('#inputUpdate').val('');
        $('#documentTypeLabel').text(documentLabel);
        $('#fiUpdateTypeDocument').val(documentType);
        $('#saveEntryDocumentId').val(entryId);
        $("#inputUpdate").mask(mask, { placeholder: formatValid });
    }
</script>

