<?xml version="1.0" encoding="utf-8" ?>
<camera:CameraPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:camera="clr-namespace:MDispatch.NewElement"
             OnPhotoResult="CameraPage_OnPhotoResult"
             x:Class="MDispatch.View.AskPhoto.CameraPageFolder.CameraItems">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="BackIconpage.png"
                   HorizontalOptions="Start"
                   AbsoluteLayout.LayoutBounds="25, 25, 18, 36">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
            <Label Text="Please take a picture of the items being transported with the car"
                   TextColor="White"
                   FontSize="14" AbsoluteLayout.LayoutFlags="PositionProportional"
                   AbsoluteLayout.LayoutBounds=".5, .9, Autosize, Autosize"
                   FontFamily="{StaticResource OpenSans-Bold}"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</camera:CameraPage>