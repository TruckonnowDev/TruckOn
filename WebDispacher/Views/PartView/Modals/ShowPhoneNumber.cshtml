@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model string

<div class="modal fade" id="showPhoneNumber" tabindex="-1" role="dialog" aria-labelledby="addRequredDocLabel" aria-hidden="true">
    <content class="ng-modal-wrapper">
        <div class="modal-dialog show-phone modal-lg " role="document">
            <div class="modal-content">
                <div class="modal-header modal-title">
                    <h1 class="text-center" style="width:100%;" id="ShowNumberHeader">@Localizer["ShowNumberHeader"]</h1>
                </div>
                <div class="modal-body">
                    <div class="full-label">
                        <a class="a-label">@Localizer["PhoneNumber"]:</a>
                        <a style="font-size:16px;">@Model</a>
                    </div>
                    <div class="form-group full-label">
                        <button class="button-custom copy-number-button" id="copyNumberButton">@Localizer["ButtonCopyNumber"]</button>
                    </div>
                </div>
            </div>
        </div>
    </content>
</div>

<script>
    document.getElementById("copyNumberButton").addEventListener("click", function () {
        const phoneNumber = document.querySelector(".full-label a:last-child").textContent;
        navigator.clipboard.writeText(phoneNumber)
            .then(() => {
                SuccessAlert("@Localizer["NotificationTextSuccessCopy"]");
            })
            .catch((error) => {
                console.error("@Localizer["ErrorCopyTextLabel"]: " + error);
                ErrorAlert("@Localizer["NotificationTextErrorCopy"]");
            });
    });
</script>

