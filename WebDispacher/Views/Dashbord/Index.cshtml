<script>
    function ConfirmRemoveWidgetEntry(id, type) {
        var body = {
            id: id,
        };
        var url = '@Url.Action("RemoveTrailerWidget", "Equipment")';

        if (type === '@TypeWidget.Truck') {
            url = '@Url.Action("RemoveTruckWidget", "Equipment")';

        } else if (type === '@TypeWidget.Order') {
            url = '@Url.Action("RemoveOrderWidget", "Dashbord")';
        }

        $.ajax({
            type: "post",
            async: true,
            data: body,
            url: url,
            dataType: 'json',
            success: function (result) {
                if (result) {
                    switch (type) {
                        case '@TypeWidget.Truck':
                            updateTruckWidgets()
                            break;
                        case '@TypeWidget.Trailer':
                            updateTrailerWidgets();
                            break;
                        case '@TypeWidget.Order':
                            updateOrderWidgets();
                            break;
                    }
                    SuccessAlert('@Localizer["MessageSuccessRemoveWidget"]');
                } else {
                    WarningAlert('@Localizer["MessageErrorRemoveWidget"]');
                }
                $('#editWidget').modal('hide');
            },
            error: function (result) {
                ErrorAlert('@Localizer["MessageErrorRequestRemoveWidget"]');
                $('#editWidget').modal('hide');
            },
        });
    }

    function updateTruckWidgets() {
        $.ajax({
            url: '@Url.Action("GetCurrentTruckWidgetsInCompany", "Equipment")',
            type: 'GET',
            success: function (result) {
                $("#truckWidgetBlock").html(result);
            },
            error: function () {
            }
        });
    }

    function updateTrailerWidgets() {
