@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<body>
    <div class="admin">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="tabContent">
                        <h2>@Localizer["InfoAboutTheCompany"]</h2>
                        <form action="" method="post" enctype="multipart/form-data">
                            <label class="big-label" for="">
                                @Localizer["NameCompany"]
                                <input class="height-input" type="text" name="name" required>
                            </label>
                            <label class="big-label" for="">
                                @Localizer["EmailCompany"]
                                <input class="height-input" type="email" name="email" required>
                            </label>
                            <div class="full-label">
                                <a class="a-label">@Localizer["DocMcNumberConfirmation"]</a>
                                <div class="d-flex align-items-center wrap">
                                    <div class="file-group big-label mr-2 mb-2">
                                        <div class="row d-flex align-items-center inp-file-width">
                                            <div class="col-8 label-input">
                                                <div onclick="ClearFile(`fi1`, 'fl1');" class="fi" id="fl1"></div>
                                            </div>
                                            <div class="col-4 select-doc">
                                                <div class="select-button-1 d-flex justify-content-end">
                                                    <label>
                                                        @Localizer["SelectDocument"]
                                                        <input class="height-input" id="fi1" onchange="GetFileName(this.value, 'fl1');" type="file" name="MCNumberConfirmation" accept="application/pdf, image/jpeg, image/jpg" required>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a>@Localizer["InfoMessageUploadFiles"]</a>
                                </div>
                            </div>
                            <div class="full-label">
                                <a class="a-label">@Localizer["DocIFTA"]</a>
                                <div class="d-flex align-items-center wrap">
                                    <div class="file-group big-label mr-2 mb-2">
                                        <div class="row d-flex align-items-center inp-file-width">
                                            <div class="col-8 label-input">
                                                <div onclick="ClearFile(`fi2`, 'fl2');" class="fi" id="fl2"></div>
                                            </div>
                                            <div class="col-4 select-doc">
                                                <div class="select-button-1 d-flex justify-content-end">
                                                    <label>
                                                        @Localizer["SelectDocument"]
                                                        <input class="height-input" id="fi2" onchange="GetFileName(this.value, 'fl2');" type="file" name="IFTA" accept="application/pdf, image/jpeg, image/jpg" required>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a>@Localizer["InfoMessageUploadFiles"]</a>
                                </div>
                            </div>
                            <div class="full-label">
                                <a class="a-label">@Localizer["DocKYU"]</a>
                                <div class="d-flex align-items-center wrap">
                                    <div class="file-group big-label mr-2 mb-2">
                                        <div class="row d-flex align-items-center inp-file-width">
                                            <div class="col-8 label-input">
                                                <div onclick="ClearFile(`fi3`, 'fl3');" class="fi" id="fl3"></div>
                                            </div>
                                            <div class="col-4 select-doc">
                                                <div class="select-button-1 d-flex justify-content-end">
                                                    <label>
                                                        @Localizer["SelectDocument"]
                                                        <input class="height-input" id="fi3" onchange="GetFileName(this.value, 'fl3');" type="file" name="KYU" accept="application/pdf, image/jpeg, image/jpg" required>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a>@Localizer["InfoMessageUploadFiles"]</a>
                                </div>
                            </div>
                            <div class="full-label">
                                <a class="a-label">@Localizer["DocLogbookPapers"]</a>
                                <div class="d-flex align-items-center wrap">
                                    <div class="file-group big-label mr-2 mb-2">
                                        <div class="row d-flex align-items-center inp-file-width">
                                            <div class="col-8 label-input">
                                                <div onclick="ClearFile(`fi4`, 'fl4');" class="fi" id="fl4"></div>
                                            </div>
                                            <div class="col-4 select-doc">
                                                <div class="select-button-1 d-flex justify-content-end">
                                                    <label>
                                                        @Localizer["SelectDocument"]
                                                        <input class="height-input" id="fi4" onchange="GetFileName(this.value, 'fl4');" type="file" name="logbookPapers" accept="application/pdf, image/jpeg, image/jpg" required>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a>@Localizer["InfoMessageUploadFiles"]</a>
                                </div>
                            </div>
                            <div class="full-label">
                                <a class="a-label">@Localizer["DocCOI"]</a>
                                <div class="d-flex align-items-center wrap">
                                    <div class="file-group big-label mr-2 mb-2">
                                        <div class="row d-flex align-items-center inp-file-width">
                                            <div class="col-8 label-input">
                                                <div onclick="ClearFile(`fi5`, 'fl5');" class="fi" id="fl5"></div>
                                            </div>
                                            <div class="col-4 select-doc">
                                                <div class="select-button-1 d-flex justify-content-end">
                                                    <label>
                                                        @Localizer["SelectDocument"]
                                                        <input class="height-input" id="fi5" onchange="GetFileName(this.value, 'fl5');" type="file" name="COI" accept="application/pdf, image/jpeg, image/jpg" required>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a>@Localizer["InfoMessageUploadFiles"]</a>
                                </div>
                            </div>
                            <div class="full-label">
                                <a class="a-label">@Localizer["DocPermits"]</a>
                                <div class="d-flex align-items-center wrap">
                                    <div class="file-group big-label mr-2 mb-2">
                                        <div class="row d-flex align-items-center inp-file-width">
                                            <div class="col-8 label-input">
                                                <div onclick="ClearFile(`fi6`, 'fl6');" class="fi" id="fl6"></div>
                                            </div>
                                            <div class="col-4 select-doc">
                                                <div class="select-button-1 d-flex justify-content-end">
