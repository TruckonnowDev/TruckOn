<div class="body">
    <div style="display:flex;">
        <select class="inpContentInspection" onchange="window.location.href ='Users?idCompanySelect=' + this.options[this.selectedIndex].value">
            <option selected value="0">All users</option>
            @for (int i = 0; i < ViewBag.Companies.Count; i++)
            {
                @if (ViewBag.IdCompanySelect != 0 && ViewBag.Companies[i].Id == ViewBag.IdCompanySelect)
                {
                    <option selected value="@ViewBag.Companies[i].Id">@ViewBag.Companies[i].Name</option>
                }
                else
                {
                    <option value="@ViewBag.Companies[i].Id">@ViewBag.Companies[i].Name</option>
                }
            }
        </select>
    </div>
    <nav>
        <input class="btnSt" type="button" value="Companies" onclick="window.location.href='@Url.Action("Companies", "Company")';" />
        <input style="width:150px" class="btnSt activeBtn" type="button" value="All Users" onclick="window.location.href='@Url.Action("Users", "Company")';" />
    </nav>
    <div class="contentBody">
        <table>
            <thead>
                <tr>
                    <th>
                        Login
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        CompanyName
                    </th>
                    <th>
                        Registration
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < ViewBag.Users.Count; i++)
                {
                <tr>
                    <td>
                        @ViewBag.Users[i].Login
                    </td>
                    <td>
                        @ViewBag.Users[i].Password
                    </td>
                    <td>
                        @ViewBag.Users[i].CompanyName
                    </td>
                    <td>
                        @ViewBag.Users[i].Date
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

