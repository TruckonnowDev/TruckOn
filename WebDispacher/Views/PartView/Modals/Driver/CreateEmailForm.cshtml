@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer


<div class="modal fade" id="modal-index" tabindex="-1" role="dialog" aria-labelledby="createEmailModalLabel" aria-hidden="true">
    <content class="ng-modal-wrapper">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header modal-title">
                     <h1 class="text-center" style="width:100%;padding-left: 14px;" id="DeleteLabel">@Localizer["EmailMessage"]</h1>
                    <button type="button" style="font-size:18px;" class="close text-right" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&#9587;</span>
                    </button>
                </div>
                <div class="modal-body pt-3">
                    <form method="post" action="/Equipment/SaveDoc" enctype="multipart/form-data">
                        <div class="full-label">
                            <a class="a-label">
                                <span id="documentTypeLabel">@Localizer["YourMessage"]</span>
                            </a>
                            <textarea class="textarea-resize-none" type="text" name="message" id="emailMessage" required></textarea>
                        </div>
                        
                        <div class="form-group full-label">
                            <input type="hidden" id="driverId" name="driverId" />
                            <button class="button-custom submit-add">@Localizer["ButtonSend"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </content>
</div>

<script>
    $(document).ready(function() {
        let modalIndex = "@ViewData["ModalId"]";

        if(modalIndex !== ""){
            $("#modal-index").attr('id', modalIndex);
        }
    });

    function setEmailProperty (driverId) {
        $('#driverId').val(driverId);
    }
</script>

