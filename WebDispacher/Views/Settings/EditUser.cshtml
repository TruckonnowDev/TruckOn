@using Microsoft.AspNetCore.Mvc.Localization

@model WebDispacher.ViewModels.Settings.SettingsUserViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Edit User";
}

<body>
    <div class="admin">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="tabContent">
                        <h2>@Localizer["InfoAboutUser"]</h2>
                        <form action="/Settings/User/Edit" method="post">
                            <label for="">
                                @Localizer["Login"]
                                <input type="text" name="login" value="@Model.Login" required>
                            </label>
                            <label for="">
                                @Localizer["Password"]
                                <input type="password" name="password" value="@Model.Password" required>
                            </label>
                            <input name="id" value="@Model.Id" style="display:none" />
                            <input class="btn1" type="submit" value="@Localizer["Save"]" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>