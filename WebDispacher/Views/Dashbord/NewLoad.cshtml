<div class="admin">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h1>Orders</h1>
                    <button class="btn1 mr-3" onClick='location.href="/Dashbord/Order/Creat"'>Create Order</button>
                    <a style="background-color: white;color:#686F7C;" data-toggle="collapse" href="#search-form" role="button" aria-expanded="false" aria-controls="search-form">Search Orders
                        <span>&#709;</span></a>
                </div>
                <div class="collapse multi-collapse" id="search-form">
                    <div style="margin-top: 15px;" class="card border card-body">
                        <form method="get" action="/Dashbord/Order/NewLoad">
                            <input class="type-button" type="text" value="@ViewBag.Name" id="name-input" name="name" placeholder="Name">
                            <input class="type-button" type="text" value="@ViewBag.Address" id="address-input" name="address" placeholder="Address">
                            <input class="type-button" type="text" value="@ViewBag.Phone" id="phone-input" name="phone" placeholder="Phone number">
                            <input class="type-button" type="text" value="@ViewBag.Email" id="email-input" name="email" placeholder="Email">
                            <input class="type-button" type="text" value="@ViewBag.price" id="price-input" name="price" placeholder="Price">
                            <button type="submit" class="btn1 btn-modal">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="tabs">
                    <div class="tab whiteborder" onclick="window.location.href='@Url.Action("NewLoad", "Dashbord")';">New load</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Assigned", "Dashbord")';">Assigned</div>
                    <div class="tab" onclick="window.location.href = '@Url.Action("Pickedup", "Dashbord")';">Picked up</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Delivered", "Dashbord")';">Delivered</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Billed", "Dashbord")';">Billed</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Paid", "Dashbord")';">Paid</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Archived", "Dashbord")';">Archived</div>
                    <div class="tab" onclick="window.location.href='@Url.Action("Deleted", "Dashbord")';">Deleted</div>
                    <div class="tabContent">
                        @for (int i = 0; i < ViewBag.Orders.Count; i++)
                        {
                            <div class="one-line">
                                <div class="top-line">
                                    <div class="left">
                                        <button class="btn3" onClick='location.href="/Dashbord/Order/FullInfoOrder?id=@ViewBag.Orders[i].Id&stasus=NewLoad"'>Load ID: @ViewBag.Orders[i].idOrder</button>
                                        <div class="text"><img src="~/img/dolar.svg" alt=""> @ViewBag.Orders[i].PriceListed</div>
                                        <div class="text"><img src="~/img/clock.svg" alt=""> @ViewBag.Orders[i].TotalPaymentToCarrier</div>
                                    </div>
                                    <div class="right">
                                        <a class="btn3" href="/Dashbord/Order/Edit?id=@ViewBag.Orders[i].Id&stasus=NewLoad">Edit</a>
                                        <select onchange="SelectAssining(this.options[this.selectedIndex].value, '@ViewBag.BaseUrl')" class="btn3">
                                            <option value="">Assign</option>
                                            @for (int j = 0; j < ViewBag.Drivers.Count; j++)
                                            {
                                                <option class="btn3" value="@ViewBag.Orders[i].Id,@ViewBag.Drivers[j].Id">@ViewBag.Drivers[j].FullName</option>
                                            }
                                        </select>
                                        <a class="btn3" href="DeletedOrder?id=@ViewBag.Orders[i].Id&status=NewLoad">Delete</a>
                                    </div>
                                </div>
                                <div class="info-line">
                                    <div class="info-block">
                                        <h3>ORIGIN</h3>
                                        <p> @ViewBag.Orders[i].AddresP, @ViewBag.Orders[i].CityP,  @ViewBag.Orders[i].StateP, @ViewBag.Orders[i].ZipP</p>
                                        <p>Phone: @ViewBag.Orders[i].PhoneP</p>
                                    </div>
                                    <div class="info-block">
                                        <h3>DESTINATION</h3>
                                        <p> @ViewBag.Orders[i].AddresD, @ViewBag.Orders[i].CityD,  @ViewBag.Orders[i].StateD, @ViewBag.Orders[i].ZipD</p>
                                        <p>Phone: @ViewBag.Orders[i].PhoneD</p>
                                        <p>Delivery Estimated: @ViewBag.Orders[i].DeliveryEstimated</p>
                                        <p>Phone: @ViewBag.Orders[i].PhoneD</p>
                                    </div>
                                    <div class="info-block">
                                    </div>
                                </div>
                            </div>
                        }
                        @if (ViewBag.count != 1)
                        {
                            <div class="center">
                                <div class="pagination">
                                    @for (int y = 1; y <= ViewBag.count; y++)
                                    {
                                        <a href="?page=@y">@y</a>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
 $(document).ready(function() {
     var name= $('#name-input').val();
     var address= $('#address-input').val();
     var phone= $('#phone-input').val();
     var email= $('#email-input').val();
     var price= $('#price-input').val();
     
     if (name !== "" || address !== "" 
        || phone !== "" || email !== "" 
        || price !== "")
     {
            $("#search-form").addClass('show')
     }
 });
</script>

<style>
    input::placeholder {
        color: #c4c9d5;
        font-size: 16px;
    }
</style>