@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Payment Method";
}

<body>
    <div class="admin Billing">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title">
                        <h1 class="text-info-header-1">@Localizer["PaymentMethod"]</h1>
                        <button class="btn1" onclick="window.location.href='/Settings/Biling/AddPaymentMethod';">@Localizer["AddPaymentMethod"]</button>
                    </div>
                </div>
                <div class="col-md-12">
                    @if (ViewBag.PaymentMethods != null)
                    {
                        foreach (var paymentMethod in ViewBag.PaymentMethods)
                        {
                            <div class="lineal"></div>
                            <div class="left">
                                <div class="contact">
                                    <p><strong>@Localizer["CreditNumber"]: </strong> •••• •••• •••• @paymentMethod.Last4</p>
                                    <p><strong>@Localizer["NameOnCard"]: </strong> @paymentMethod.Name</p>
                                    <p><strong>@Localizer["ExpirationDate"]: </strong> @paymentMethod.ExpMonth/@paymentMethod.ExpYear</p>
                                </div>
                            </div>
                            <div class="right">
                                <button class="btn3" onclick="window.location.href='/Settings/Biling/DeletePaymentMethod?idPayment=@paymentMethod.Id'">@Localizer["Delete"]</button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</body>

<style>
    p {
        color: #000000;
    }

    .btn1 {
        width: 25%;
    }
</style>