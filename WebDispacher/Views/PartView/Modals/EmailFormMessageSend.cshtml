@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer


<div class="modal fade" id="sendEmailModalId" tabindex="-1" role="dialog" aria-labelledby="sendEmailModalLabel" aria-hidden="true">
    <content class="ng-modal-wrapper">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header modal-title">
                    <h1 class="text-center" style="width:100%" id="DeleteLabel">@Localizer["EmailFormMessageSendHeader"]</h1>
                    <button type="button" style="font-size:22px;" class="close text-right" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&#9587;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="">
                                @Localizer["SubjectMessage"]:
                                <input id="subjectId" type="text" class="modal-inp-text validation subject-input" required />
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="">
                                @Localizer["MessageBox"]:
                                <textarea type="text" id="messageBox" class="modal-inp-text textarea-resize-none message-area-input" name="messageBox" style="height:200px;" required></textarea>
                            </label>
                        </div>
                        <div class="form-group full-label">
                            <button type="button" class="button-custom submit-add" id="remove-entry-button" onclick="SendEmail()">@Localizer["SendEmail"]</button>
                        </div>
                        <div class="form-group full-label">
                            <button type="button" data-dismiss="modal" class="button-custom-2">@Localizer["Cancel"]</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </content>
</div>

