<script>
    const NavItems = ['User','Trucks','Extension','Order']
        $(document).ready(function () {
            var str = location.pathname
            for (let i = 0; i < NavItems.length; i++)
            {
                 if (str.indexOf(NavItems[i]) >=0 ){
                    $('#' + NavItems[i]).addClass('active');
                    break;
                }
            }
          
        });
</script>