    function saveOrderWidgetAndRefreshItems() {
        var form = $('#editWidget form');
        $.ajax({
            url: '/Order/UpdateWidget',
            type: 'POST',
            data: form.serialize(),
            success: function (data) {
                var newBody = $('.modal-body', data);

                var isValid = newBody.find('[name="IsValid"]').val() == 'True';

                if (isValid) {
                    $('#editWidget').modal('hide');
                    $('#statusName').val('');
                    SuccessAlert("@Localizer["OrderWidgetSuccessUpdated"]");
                    updateOrderWidgets();
                } else {
                    $('#modalEditWidgetFormContainer').find('.modal-body').replaceWith(newBody);
                    InitializeEditTruck();
                }
            },
            error: function () {
                WarningAlert("@Localizer["OrderWidgetNotUpdated"]")
            }
        });
    }

