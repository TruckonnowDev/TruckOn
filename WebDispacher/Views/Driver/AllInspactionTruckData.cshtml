<div class="body">
    <input class="backBtn" type="button" value="← Back to Orders" onclick="history.back();" />
    <div>
        <select class="inpContentInspection" onchange="window.location.href='InspactionTruck?idDriver=@ViewBag.IdDriver&nameDriver=@ViewBag.NameDrive&date='+this.options[this.selectedIndex].value">
            @for (DateTime i = DateTime.Now; i >= new DateTime(2019, 9, 1); i = i.AddMonths(-1))
            {
                @if (i.ToShortDateString() != @ViewBag.Date)
                {
                    <option>@i.ToShortDateString()</option>
                }
                else
                {
                    <option selected>@ViewBag.Date</option>
                }
            }
        </select>
    </div>
    <hr />
    <div class="contentBody">
        @for (int i = 0; i < ViewBag.InspectionTruck.Count; i++)
        {
            <div class="contentInspection">
                <span class="inpData">Driver: @ViewBag.NameDriver</span><br />
                <span class="inpData">Truc: ------------</span><br />
                <span class="inpData">Trailer: ---------------</span><br />
                <span class="inpData">Inspection:  @ViewBag.InspectionTruck[i].Date</span>
            </div>
        }
    </div>
</div>

<style>
    .backBtn {
        background: none;
        border: none;
        font-size: 17px;
        color: #313336;
        margin-bottom: 20px;
    }

    .inpData {
        font-size: 22px;
        color: rgb(51, 51, 51);
    }

    .contentInspection {
        padding: 15px;
        border-width: 1px;
        border-style: solid;
        border-color: rgba(45, 45, 45, 0.38);
        border-radius: 10px;
        width: 15%;
        margin: 10px;
    }

    .inpContentInspection{
        display: inline-block ;
        width: 200px;
        padding: 5px 10px;
        border: 1px solid ;
        border-radius: 10px;
        border: 1px solid black;
        font-size: 18px;
        margin-bottom: 10px;
    }

    .contentInspection:hover
    {
        box-shadow: inset -35px 25px 35px 0px #323947;
        -webkit-box-shadow: inset -35px 25px 35px 0px #323947;
        -moz-box-shadow: inset -35px 25px 35px 0px #323947;
        transition: 0.3s;
    }

    .contentBody {
        margin: 10px;
        display:flex;
        flex-wrap:wrap;
        justify-content:space-between;
    }

    .body {
        margin-top: 30px;
        margin-left: 5px;
        margin-right: 5px;
        padding: 10px;
    }
</style>