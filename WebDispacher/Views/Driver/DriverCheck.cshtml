@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Driver Check";
}

<body>
    <div class="admin">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title">
                        <h1>@Localizer["Drivers"]</h1>
                        <form method="get" action="" class="search ">
                            <input placeholder="@Localizer["NameDriverSearch"]" class="text-input" value="@ViewBag.NameDriver" name="nameDriver" type="text">
                            <input placeholder="@Localizer["DriverLicenseSearch"]" class="text-input input-big" value="@ViewBag.DriversLicense" name="driversLicense" type="text">
                            <input type="submit" value="@Localizer["Search"]" class="btn1">
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="tabs">
                        <div class="tab" onclick="window.location.href='@Url.Action("Drivers", "Driver")';">@Localizer["Drivers"]</div>
                        <div class="tab whiteborder" onclick="window.location.href='@Url.Action("Check", "Driver")';">@Localizer["DriverCheck"]</div>
                        <div class="tab" onclick="window.location.href='@Url.Action("AddReport", "Driver")';">@Localizer["ReportDriver"]</div>
                        <div class="tabContent">
                            @for (int i = 0; i < ViewBag.DriverReports.Count; i++)
                            {
                                <div class="one-line">
                                    <div class="top-line">
                                        <div class="left">
                                            <div class="contact">
                                                <p><strong>@ViewBag.DriverReports[i].FullName</strong></p>
                                                <p><strong>@Localizer["DriverLicense"]:</strong> @ViewBag.DriverReports[i].DriversLicenseNumber</p>
                                                <p><strong>@Localizer["Registration"]:</strong> @ViewBag.DriverReports[i].DateRegistration</p>
                                                <p><strong>@Localizer["Fired"]:</strong> @ViewBag.DriverReports[i].DateFired</p>
                                                <p>@ViewBag.DriverReports[i].Comment</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<style>
    .input-big {
        width: 34% !important;
    }

    .text-input {
        width: 30%;
        height: 54px;
        background: #fff;
        border: 1px solid #c4c9d5;
        border-radius: 10px;
        padding: 0 15px;
        font-family: Montserrat;
        font-style: normal;
        font-weight: 400;
        font-size: 16px;
        line-height: 1.2;
        color: #686f7c;
        margin-top: 6px;
        margin-right: 3%;
    }

    input::-webkit-input-placeholder {
        color: #c4c9d5;
    }
</style>